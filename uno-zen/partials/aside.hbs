<aside class="cover" style="background-color: #000;">
  <div class="cover container">
    <div class="profile">
      {{#if @blog.logo}}
      <a id="avatar-link" title="{{@blog.title}}" href="http://titamas.net/#open">
        <img src="{{@blog.logo}}" alt="{{@blog.title}}" class="profile avatar rounded hvr-buzz-out" />
        <h1 id="profile-title">東工大メディア研究会<span>TITAMAS</span></h1>
        <h3 id="profile-resume"></h3>
      </a>
      {{/if}}

      <hr class="divider long" />
      <p>{{@blog.description}}</p>
      <hr class="divider short" />
      <div class="navigation">
        <div class="profile contact">
          {{navigation}}
          {{> social}}
          {{> search }}
        </div>
      </div>
  	  {{> footer}}
    </div>
  </div>
</aside>
